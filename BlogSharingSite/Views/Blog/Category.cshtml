@using BlogSharingSite.Models.Entity
@model List<TBL_Blogs>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<!-- site content
        ================================================== -->
<div class="s-content">

    <div class="masonry-wrap">

        <div class="masonry">

            <div class="grid-sizer"></div>

            @foreach (var x in Model)
            {
                <article class="masonry__brick entry format-standard animate-this">

                    <div class="entry__thumb">
                        <a href="/Blog/BlogDetails/@x.blogID" class="entry__thumb-link">
                            <img src="@Url.Content(x.blogImage)" style="width:354px; height:354px">
                        </a>
                    </div>

                    <div class="entry__text">
                        <div class="entry__header">

                            <h2 class="entry__title"><a href="/Blog/BlogDetails/@x.blogID">@x.blogTitle</a></h2>
                            <div class="entry__meta">
                                <span class="entry__meta-cat">
                                    <a href="category.html">@x.TBL_Categories.categoryTitle.ToUpper()</a>
                                </span>
                                <span class="entry__meta-date">
                                    <a href="single-standard.html">@x.blogDate</a>
                                </span>
                            </div>

                        </div>
                        <div class="entry__excerpt" style="display:flex; justify-content:space-evenly;">
                            <div>
                                <i class="fa-regular fa-eye"></i> @x.blogViewCount.ToString()
                            </div>
                            <div>
                                <i class="fa-regular fa-comment"></i> @x.TBL_Comments.Where(m => m.commentStatus == true).Count()
                            </div>
                        </div>
                    </div>

                </article> <!-- end article -->
            }


