@model BlogSharingSite.Models.Entity.TBL_Messages
@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

@if (TempData["contacted"] != null)
{
    <script>
        window.location.href = window.location.href;
    </script>
}
<!-- site content
        ================================================== -->
<div class="s-content content">
    <main class="row content__page">

        <section class="column large-full entry format-standard">
            <div class="content__page-header">
                <h1 class="display-1">
                    Get in Touch.
                </h1>
            </div>

            <div class="media-wrap">
                <div>
                    <img src="images/thumbs/contact/contact-1000.jpg" srcset="images/thumbs/contact/contact-2000.jpg 2000w,
                                      images/thumbs/contact/contact-1000.jpg 1000w,
                                      images/thumbs/contact/contact-500.jpg 500w" sizes="(max-width: 2000px) 100vw, 2000px" alt="">
                </div>
            </div>

            <!-- end content__page-header -->



            <h3 class="h2">Bir mesaj bırakın</h3>

            <form name="contactForm" id="contactForm" method="post" action="" autocomplete="off">
                <fieldset>

                    <div class="form-field">
                        @Html.TextBoxFor(m => m.senderName, new { @class = "full-width", placeholder = "Adınız" })
                    </div>

                    <div class="form-field">
                        @Html.TextBoxFor(m => m.senderMail, new { @class = "full-width", placeholder = "E-Posta adresiniz" })
                    </div>

                    <div class="form-field">
                        @Html.TextBoxFor(m => m.messageSubject, new { @class = "full-width", placeholder = "Mesaj konusu" })
                    </div>

                    <div class="message form-field">
                        @Html.TextAreaFor(m => m.messageContent, new { @class = "full-width", placeholder = "Mesajınız", @maxlength = "350",  style = "resize:none;" })
                    </div>

                    <button id="submit" class="btn btn--primary btn-wide btn--large full-width">MESAJ GÖNDER</button>

                </fieldset>
            </form> <!-- end form -->

        </section>

    </main>

</div> <!-- end s-content -->
