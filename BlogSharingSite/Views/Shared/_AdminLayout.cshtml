<!DOCTYPE html>
<html class="no-js" lang="en">
<head>

    <!--- basic page needs
    ================================================== -->
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- mobile specific metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Blog/css/base.css">
    <link rel="stylesheet" href="~/Blog/css/vendor.css">
    <link rel="stylesheet" href="~/Blog/css/main.css">

    <!-- script
    ================================================== -->
    <script src="~/Blog/js/modernizr.js"></script>

    <!-- favicons
    ================================================== -->
    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
    <link rel="icon" href="~/Images/admin-favicon.png" type="image/x-icon" />
    <link rel="manifest" href="site.webmanifest">
    <script src="https://kit.fontawesome.com/ece0471f46.js" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/ckeditor");
    @Styles.Render("~/bundles/bootstrap")


    <style>
        #li-settings:hover {
            color: #0b90c2 !important;
        }

        #li-goSite:hover {
            color: #11b254 !important;
        }
    </style>
</head>

<body>

    <!-- Some C# codes
    ================================================== -->
    @{
        BlogSharingSite.Models.Entity.BlogSharingEntities db = new BlogSharingSite.Models.Entity.BlogSharingEntities();

        var unreadMessageCount = db.TBL_Messages.Where(x => x.messageStatus == true).Count();
    }



    <!-- preloader
    ================================================== -->
    <div id="preloader">
        <div id="loader" class="dots-fade">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>

    <div id="top" class="s-wrap site-wrapper">

        <!-- site header
        ================================================== -->
        <header class="s-header" style="overflow:hidden;">

            <div class="header__top">
                <div class="header__logo">
                    <a class="site-logo" href="/Admin/Index">
                        <img src="~/blog/images/logo.svg" alt="Homepage">
                    </a>
                </div>
            </div> <!-- end header__top -->
            <nav class="header__nav-wrap">

                <ul class="header__nav">
                    <li><a href="/Admin/Index" title=""><i class="fa-solid fa-pen-to-square"></i> Bloglar </a></li>
                    <li class="has-children">
                        <a href="#0" title=""><i class="fa-regular fa-comment-dots"></i> Yorumlar</a>
                        <ul class="sub-menu">
                            <li><a href="@Url.Action("Comments", "Admin", new { status = 1 })">AKTİF YORUMLAR</a></li>
                            <li><a href="@Url.Action("Comments", "Admin", new { status = 0 })">SİLİNEN YORUMLAR</a></li>
                        </ul>
                    </li>
                    <li><a href="/Admin/Categories" title=""><i class="fa-solid fa-list"></i> Kategoriler</a></li>
                    <li class="has-children">
                        <a href="#0" title=""><i class="fa-regular fa-envelope"></i> Mesajlar</a>
                        <ul class="sub-menu">
                            <li><a href="@Url.Action("Messages", "Admin", new { status = 1 })">YENİ MESAJLAR @{if (unreadMessageCount > 0)
                                {<span style="padding:1px 3px 1px 5px; background-color:green; color:white;">@unreadMessageCount</span> } } </a></li>
                            <li><a href="@Url.Action("Messages", "Admin", new { status = 0 })">OKUNAN MESAJLAR </a></li>
                        </ul>
                    </li>
                    <li><a href="/Admin/Abouts" title=""><i class="fa-regular fa-circle-question"></i> Hakkımızda</a></li>
                    <hr />
                    <li><a href="/Admin/FileUpload" title=""><i class="fa-solid fa-arrow-up-from-bracket"></i> Dosya Yükle</a></li>
                    <li><a href="/Admin/FileList" title=""><i class="fa-solid fa-list"></i> Dosya Listesi</a></li>
                    <hr />
                    <li><a href="/Admin/AccountSettings" id="li-settings" title="" style="color:#16b0ea;"><i class="fa-solid fa-gears"></i> Hesap Ayarları</a></li>
                    <hr />
                    <li><a href="/Blog/Index" id="li-goSite" style="color:#14e56b"><i class="fa-solid fa-globe"></i> Siteye Git</a></li>
                    <li><a href="@Url.Action("LogOut", "Login")" title="" style="color:red"><i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap</a></li>
                </ul>
                <ul class="header__nav">
                    <li style="text-align:center">
                        <a>© Copyright Typerite 2021</a>
                        <a>Design by</a>
                        <a href="https://www.styleshout.com/" title=""> StyleShout</a>
                    </li>
                </ul><!-- end header__nav -->
