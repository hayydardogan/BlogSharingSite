@{
    Layout = null;
}

<!DOCTYPE html>
<html class="no-js" lang="en">
<head>

    <!--- basic page needs
    ================================================== -->
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- mobile specific metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Blog/css/base.css">
    <link rel="stylesheet" href="~/Blog/css/vendor.css">
    <link rel="stylesheet" href="~/Blog/css/main.css">

    <!-- script
    ================================================== -->
    <script src="~/Blog/js/modernizr.js"></script>

    <!-- favicons
    ================================================== -->
    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
    <link rel="icon" href="~/Images/blog-favicon.png" type="image/x-icon" />
    <link rel="manifest" href="site.webmanifest">
    <script src="https://kit.fontawesome.com/ece0471f46.js" crossorigin="anonymous"></script>


</head>

<body>

    <!-- preloader
    ================================================== -->
    <div id="preloader">
        <div id="loader" class="dots-fade">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>

    <div id="top" class="s-wrap site-wrapper">

        <!-- site header
        ================================================== -->
        <header class="s-header">

            <div class="header__top">
                <div class="header__logo">
                    <a class="site-logo" href="/Blog/Index">
                        <img src="~/blog/images/logo.svg" alt="Homepage">
                    </a>
                </div>
            </div> <!-- end header__top -->

            <nav class="header__nav-wrap" style="overflow:scroll;">

                <ul class="header__nav">
                    <li><a href="/Blog/Index" title=""><i class="fa-solid fa-house"></i> Anasayfa</a></li>
                    <li class="has-children">
                        <a href="#0" title=""><i class="fa-solid fa-list"></i> Kategoriler</a>
                        <ul class="sub-menu">
                            @{
                                BlogSharingSite.Models.Entity.BlogSharingEntities db = new BlogSharingSite.Models.Entity.BlogSharingEntities();
                                var degerler = db.TBL_Categories.OrderBy(x=>x.categoryTitle).ToList();
                                foreach (var x in degerler)
                                {
                                    <li><a href="/Blog/Category/@x.categoryID">@x.categoryTitle.ToUpper()</a></li>
                                }
                            }
                            @*<li><a href="category.html">MAGAZİN</a></li>
                                <li><a href="category.html">MÜZİK</a></li>
                                <li><a href="category.html">TATİL & SEYAHAT</a></li>
                                <li><a href="category.html">EĞİTİM</a></li>
                                <li><a href="category.html">TEKNOLOJİ</a></li>*@
                        </ul>
                    </li>
                    <li><a href="/About/Index" title=""><i class="fa-solid fa-circle-info"></i> Hakkımızda</a></li>
                    <li><a href="/Contact/Index" title=""><i class="fa-solid fa-envelope"></i> İletişim</a></li>
                </ul>
                <ul class="header__nav">
                    <li style="text-align:center">
                        <a>© Copyright Typerite 2021</a>
                        <a>Design by</a>
                        <a href="https://www.styleshout.com/" title=""> StyleShout</a>
                    </li>
                </ul>

                <!-- end header__nav -->
                <!--<ul class="header__social">
                    <li class="ss-facebook">
                        <a href="https://facebook.com/">
                            <span class="screen-reader-text">Facebook</span>
                        </a>
                    </li>
                    <li class="ss-twitter">
                        <a href="#0">
                            <span class="screen-reader-text">Twitter</span>
                        </a>
                    </li>
                    <li class="ss-dribbble">
                        <a href="#0">
                            <span class="screen-reader-text">Dribbble</span>
                        </a>
                    </li>
                    <li class="ss-pinterest">
                        <a href="#0">
                            <span class="screen-reader-text">Behance</span>
                        </a>
                    </li>
                </ul>-->

            </nav> <!-- end header__nav-wrap -->
            <!-- menu toggle -->
            <a href="#0" class="header__menu-toggle">
                <span>Menu</span>
            </a>

        </header> <!-- end s-header -->
        <!-- search
        ================================================== -->
        <div class="s-search">

            <div class="search-block">

                <form role="search" method="get" class="search-form" action="#">
                    <label>
                        <span class="hide-content">Ara</span>
                        <input type="search" class="search-field" placeholder="Bir şeyler yaz" value="" name="search" title="Ara" autocomplete="off">
                    </label>
                    <input type="submit" class="search-submit" value="Search">
                </form>

                <a href="#0" title="Close Search" class="search-close">Close</a>

            </div>  <!-- end search-block -->
            <!-- search modal trigger -->
            <a href="#0" class="search-trigger">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill:rgba(0, 0, 0, 1);transform:;-ms-filter:"><path d="M10,18c1.846,0,3.543-0.635,4.897-1.688l4.396,4.396l1.414-1.414l-4.396-4.396C17.365,13.543,18,11.846,18,10 c0-4.411-3.589-8-8-8s-8,3.589-8,8S5.589,18,10,18z M10,4c3.309,0,6,2.691,6,6s-2.691,6-6,6s-6-2.691-6-6S6.691,4,10,4z"></path></svg>
                <span style="letter-spacing:10px">ARA</span>
            </a>
            <span class="search-line"></span>

        </div> <!-- end s-search -->


        @RenderBody()

        <!-- footer
        ================================================== -->


    </div> <!-- end s-wrap -->
    <!-- Java Script
    ================================================== -->
    <script src="~/Blog/js/jquery-3.2.1.min.js"></script>
    <script src="~/Blog/js/plugins.js"></script>
    <script src="~/Blog/js/main.js"></script>

    <style>
        .header__nav-wrap::-webkit-scrollbar {
            display: none;
        }
    </style>

</body>
</html>