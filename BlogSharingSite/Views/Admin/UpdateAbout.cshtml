@model BlogSharingSite.Models.Entity.TBL_About
@{
    ViewBag.Title = "Hakkımızda Bilgisi Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="s-content">

    <div style="margin-left:20px">
        <span class="" style="font-weight:bold; border:1px solid; padding:10px 25px">HAKKIMIZDA GÜNCELLE</span>
    </div>
    <br />
    <div class="masonry-wrap">
        <form method="post">
            <fieldset>
                <div class="form-field">
                    @Html.TextBoxFor(m => m.aboutID, new { @class = "full-width", style = "display:none;" })
                </div>
                <div class="form-field">
                    <span>İçerik</span>
                    @Html.TextAreaFor(m => m.aboutContent, new { @class = "full-width", placeholder = "Hakkımızda içeriği", @required = "required", @maxlength = "500", @style="resize:none;"})
                </div>
                <div class="form-field">
                    <span>İçerik</span>
                    @Html.TextBoxFor(m => m.aboutImage, new { @class = "full-width", placeholder = "Hakkımızda görseli", @required = "required", @maxlength = "100" })
                </div>
                <button class="btn btn--primary btn-wide btn--large full-width">HAKKIMIZDA BİLGİSİ GÜNCELLE</button>
            </fieldset>
        </form>
    </div>
</div>

